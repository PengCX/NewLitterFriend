<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.newlitterfriend"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="7"
        android:targetSdkVersion="18" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@android:style/Theme.NoTitleBar" >
        <activity
            android:name="com.example.newlitterfriend.control.activity.launcher.SplashFragmentActivity"
            android:label="@string/app_name"
            android:theme="@android:style/Theme.NoTitleBar.Fullscreen" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <!-- 展示页面 -->
        <activity android:name="com.example.newlitterfriend.control.activity.launcher.ExhibitionFragmentActivity" >
        </activity>
        <!-- 登陆页面 -->
        <activity
            android:name="com.example.newlitterfriend.control.activity.login.LoginFragmentActivity"
            android:windowSoftInputMode="stateAlwaysVisible" >
        </activity>
        <!-- 获取验证码页面 -->
        <activity
            android:name="com.example.newlitterfriend.control.activity.register.GetAuthCodeFragmentActivity"
            android:windowSoftInputMode="stateAlwaysVisible" />
        <!-- 输入验证码页面 -->
        <activity
            android:name="com.example.newlitterfriend.control.activity.register.InputAuthCodeFragmentActivity"
            android:windowSoftInputMode="stateAlwaysVisible" />
        <!-- 绑定角色页面 -->
        <activity android:name="com.example.newlitterfriend.control.activity.register.BindRoleFragmentActivity" />
        <!-- 个人信息页面 -->
        <activity android:name="com.example.newlitterfriend.control.activity.register.PersonalInfoFragmentActivity" />
        <!-- 注册成功页面 -->
        <activity android:name="com.example.newlitterfriend.control.activity.register.RegisterSuccessFragmentActivity" />
        <!-- 主页面 -->
        <activity android:name="com.example.newlitterfriend.control.activity.main.MainFragmentActivity" />
        <!-- 消息页面 -->
        <activity android:name="com.example.newlitterfriend.control.activity.main.message.MessageFragmentActivity" />
        <!-- 朋友页面 -->
        <activity
            android:name="com.example.newlitterfriend.control.activity.main.friend.FriendActionBarActivity"
            android:theme="@style/Theme.AppCompat.Light" />
        <!-- 发现页面 -->
        <activity android:name="com.example.newlitterfriend.control.activity.main.discover.DiscoverFragmentActivity" />
        <!-- 自我页面 -->
        <activity android:name="com.example.newlitterfriend.control.activity.main.myself.MySelfFragmentActivity" />
    </application>

</manifest>