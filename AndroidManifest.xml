<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.newlitterfriend"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="11"
        android:targetSdkVersion="11" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@android:style/Theme.NoTitleBar" >
        <activity
            android:name="com.example.newlitterfriend.control.acitivity.launcher.SplashFragmentActivity"
            android:label="@string/app_name"
            android:theme="@android:style/Theme.NoTitleBar.Fullscreen" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <!-- 展示页面 -->
        <activity android:name="com.example.newlitterfriend.control.acitivity.launcher.ExhibitionFragmentActivity" >
        </activity>
        <!-- 登陆页面 -->
        <activity
            android:name="com.example.newlitterfriend.control.acitivity.login.LoginFragmentActivity"
            android:windowSoftInputMode="stateAlwaysVisible" >
        </activity>
        <!-- 获取验证码页面 -->
        <activity
            android:name="com.example.newlitterfriend.control.acitivity.login.GetAuthCodeFragmentActivity"
            android:windowSoftInputMode="stateAlwaysVisible" />
        <!-- 输入验证码页面 -->
        <activity
            android:name="com.example.newlitterfriend.control.acitivity.login.InputAuthCodeFragmentActivity"
            android:windowSoftInputMode="stateAlwaysVisible" />
        <!-- 绑定角色页面 -->
        <activity android:name="com.example.newlitterfriend.control.acitivity.login.BindRoleFragmentActivity" />
        <!-- 个人信息页面 -->
        <activity android:name="com.example.newlitterfriend.control.acitivity.login.PersonalInfoFragmentActivity" />
        <!-- 注册成功页面 -->
        <activity android:name="com.example.newlitterfriend.control.acitivity.login.RegisterSuccessFragmentActivity" />
        <!-- 主页面 -->
        <activity android:name="com.example.newlitterfriend.control.acitivity.main.MainFragmentActivity" />
    </application>

</manifest>