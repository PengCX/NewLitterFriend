<?xml version="1.0" encoding="utf-8"?>
<!-- 展示页面 -->
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <!-- 滑动页面 -->

    <android.support.v4.view.ViewPager
        android:id="@+id/exhibition_viewpager_pictures"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_marginBottom="40dp"
        android:gravity="center" >

        <!-- 登陆按钮 -->

        <Button
            android:id="@+id/exhibition_button_login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:onClick="turnToLoginPager"
            android:background="@drawable/exhibition_button_login_selector" />
        <!-- 注册按钮 -->

        <Button
            android:id="@+id/exhibition_button_register"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:onClick="turnToRegisterPager"
            android:background="@drawable/exhibition_button_register_selector" />
    </LinearLayout>

</FrameLayout>